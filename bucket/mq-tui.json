    "bin": "mq-tui.exe",
    "pre_install": [
        "$mqTui = Join-Path $env:USERPROFILE '.mq\\bin\\mq-tui'",
        "if (Test-Path $mqTui) { Remove-Item $mqTui -Force }"
    ],
    "post_install": [
        "$mqBin = Join-Path $env:USERPROFILE '.mq\\bin'",
        "if (!(Test-Path $mqBin)) { New-Item -ItemType Directory -Path $mqBin -Force | Out-Null }",
        "Copy-Item \"$dir\\mq-tui.exe\" (Join-Path $mqBin 'mq-tui') -Force",
        "Write-Host 'Copied mq-tui to ~/.mq/bin/ for ''mq tui'' subcommand support.'"
    ],
    "post_uninstall": [
        "$mqTui = Join-Path $env:USERPROFILE '.mq\\bin\\mq-tui'",
        "if (Test-Path $mqTui) { Remove-Item $mqTui -Force }"
    ],
